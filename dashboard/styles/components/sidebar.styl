.sidebar
  position fixed
  top 0
  left 0
  width 30%
  height 100%
  // background #E7E7E7

  .topbar
    position absolute
    top 0
    left 0
    z-index 2
    border-right darken($primary-color, 12%)

  &__records
    position relative
    padding 3.5em 0 0
    height 100%
    z-index 1
    border-right solid 1px #c3c3c3

    &-scroll
      width 100%
      height 100%
      overflow auto

  .record
    transition opacity 250ms ease

  &:hover .record
    opacity 0.6

    &:hover
      opacity 1

  @media (min-width: 1440px)
    width 380px
