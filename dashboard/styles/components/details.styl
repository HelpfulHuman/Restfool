.details
  display block
  position relative
  margin 0 0 0 30%
  padding 1em 3em

  &__container
    margin-left auto
    margin-right auto
    max-width 960px

  &__no-selection
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__title
    font-size 2em
    color $primary-color

    &-status
      padding-right 1em

    &-method
      padding-right 0.5em

  @media (min-width: 1440px)
    margin-left 380px
